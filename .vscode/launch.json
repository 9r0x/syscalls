{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "Build",
      "program": "${workspaceFolder}/test",
      "cwd": "${workspaceFolder}",
      "MIMode": "lldb",
      "stopAtEntry": true,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for lldb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to at&t",
          "text": "-lldb-set disassembly-flavor \"att\"",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
